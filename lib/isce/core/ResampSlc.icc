// Since fmod(a,b) in C++ != MODULO(a,b) in Fortran for all a,b, define a C++ equivalent
#define modulo_f(a,b) fmod(fmod(a,b)+(b),(b))
// Visually access 1D array as 2D
#define IDX1D(i,j,w) (((i)*(w))+(j))

